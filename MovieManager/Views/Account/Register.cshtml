@using static MovieManager.Data.AppUser
@model RegisterViewModel
@{
    ViewData["title"] = "Yeni Üyelik";

}
<h4>@ViewData["title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4 d-none d-md-block">
        <img src="~/images/register.png" />
    </div>
    <div class="col-md-8">
        <form method="post">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <select class="custom-select" asp-for="Gender" asp-items="Html.GetEnumSelectList<Genders>()">
                    <option selected value="">[Seçiniz]</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordCheck"></label>
                <input class="form-control" asp-for="PasswordCheck">
                <span asp-validation-for="PasswordCheck"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Kaydol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}