@model LoginViewModel
@{
    //Layout = null;
}

    <div class="d-flex flex-column align-items-center justify-content-center h-100">
        <div class="card shadow col-3">
            <div class="card-body">
                <div class="text-center">
                    <i class="fa fa-user fa-4x"></i>
                    <h4>Kullanıcı Girişi</h4>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" asp-validation-summary="All"></div>
                }
                <hr />
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input class="form-control" asp-for="UserName">
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input class="form-control" asp-for="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="IsPersistent">
                        <label class="form-check-label" asp-for="IsPersistent"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş</button>
                </form>
                <hr />
                <div class="text-nowrap">
                    <a asp-action="ResetPassword">Parolamı Yenile</a>
                    &bull;
                    <a asp-action="Register">Yeni Üyelik</a>
                </div>
            </div>
        </div>
    </div>
    <partial name="_ValidationScriptsPartial" />
