<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/MovieManager.styles.css" asp-append-version="true" />
</head>
<body class="bg-light h-100">
    <div class="container bg-white h-100 border-start border-end shadow">
        <div class="row h-100">
            <div class="col-12 col-md-2 text-white bg-primary">
                <div class="h5 text-center">
                    <i class="bi bi-tools"></i>
                    MovieManager
                </div>
                 <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                <hr />
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a class="text-white text-decoration-none" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="mb-2">
                        <a class="text-white text-decoration-none" asp-controller="Genres" asp-action="Index">
                            <i class="bi bi-collection-play"></i>
                            Tür Yönetimi
                        </a>
                    </li>
                    <li class="mb-2">
                        <a class="text-white text-decoration-none" asp-controller="Movies" asp-action="Index">
                            <i class="bi bi-film"></i>
                            Film Yönetimi
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-10 p-4">


                @RenderBody()
            </div>

        </div>
    </div>

     <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Uyarı!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">Oturumunuz kapatılacaktır. Devam etmek istiyor musunuz?</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">İptal</button>
                    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Logout">Devam</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
<script>
    @if (TempData["success"] is not null)
	    {
        <text>
        Swal.fire({
            toast: true,
            position: 'top',
            icon: 'success',
            title: '@TempData["success"]',
            showConfirmButton : false,
            timer : 5000
        })
        </text>
	    }

        @if (TempData["error"] is not null)
	    {
        <text>
        Swal.fire({
            toast: true,
            position: 'top',
            icon: 'error',
            title: '@TempData["error"]',
            showConfirmButton : false,
            timer : 5000
            })
        </text>
	    }
</script>
</body>
</html>
